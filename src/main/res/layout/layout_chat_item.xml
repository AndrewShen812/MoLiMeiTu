<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_fb_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="15:03"
        android:textColor="@color/font_minor"/>

    <LinearLayout
        android:id="@+id/ll_fb_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/distance_30dp"
            android:layout_height="@dimen/distance_30dp"
            android:layout_marginLeft="@dimen/distance_5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/app_icon"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/fb_reply_left_bg">

            <TextView
                android:id="@+id/tv_fb_left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/distance_10dp"
                android:maxWidth="200dp"
                android:text="@string/feed_back_auto_reply"
                android:textColor="@color/font_major"
                android:textSize="@dimen/font_size_16sp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_fb_right_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/distance_10dp"
        android:text="15:03"
        android:textColor="@color/font_minor"/>

    <LinearLayout
        android:id="@+id/ll_fb_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/fb_reply_right_bg">

            <TextView
                android:id="@+id/tv_fb_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/distance_10dp"
                android:maxWidth="200dp"
                android:text="说点什么"
                android:textColor="@color/font_major"
                android:textSize="@dimen/font_size_16sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/distance_30dp"
            android:layout_height="@dimen/distance_30dp"
            android:layout_marginRight="@dimen/distance_5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/userhead"/>

    </LinearLayout>
</LinearLayout>
