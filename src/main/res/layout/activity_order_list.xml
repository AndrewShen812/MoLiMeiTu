<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:padding="@dimen/distance_10dp"
    android:orientation="vertical"
    tools:context="com.molimeitu.OrderListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_order_list_unsettled"
            style="@style/OrderButtonStyle"
            android:text="未处理"
            android:background="@drawable/shape_rectangle_pressed" />

        <TextView
            android:id="@+id/tv_order_list_settled"
            android:layout_marginLeft="-1dp"
            style="@style/OrderButtonStyle"
            android:text="已处理"
            android:background="@drawable/shape_rectangle"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_order_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/distance_10dp"></ListView>
</LinearLayout>
