<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">

    <TextView
        android:id="@+id/tv_order_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/distance_10dp"
        android:text="下单时间：2015-07-02 17:46"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_minor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/distance_10dp"
        android:orientation="vertical"
        android:background="@drawable/selector_btn_bg">

        <TextView
            android:id="@+id/tv_order_item_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：201507021748001"
            android:textColor="@color/font_major"
            android:textSize="@dimen/font_size_16sp"/>

        <TextView
            android:id="@+id/tv_order_item_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人：申勇"
            android:textColor="@color/font_major"
            android:textSize="@dimen/font_size_16sp"/>
        <TextView
            android:id="@+id/tv_order_item_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话：13548111470"
            android:textColor="@color/font_major"
            android:textSize="@dimen/font_size_16sp"/>

        <TextView
            android:id="@+id/tv_order_item_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="订单信息：订单信息订单信息订单信息订单信息订单信息订单信息订单信息订单信息"
            android:textColor="@color/font_major"
            android:textSize="@dimen/font_size_16sp"/>
        </LinearLayout>

</LinearLayout>
