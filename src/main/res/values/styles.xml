<resources>

    <!--&lt;!&ndash; Base application theme. &ndash;&gt;-->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--</style>-->

    <style name="StartupTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@drawable/welcome_bg</item> //@null黑屏  @drawable/icon放一张启动图片
        <item name="android:windowNoTitle">true</item> //启动界面是否显示应用名称 true不显示 false显示
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomTitleBarTheme" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/distance_50dp</item>
        <item name="android:windowTitleBackgroundStyle">@color/deep_blue</item>
    </style>

    <style name="InputTipsStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_minor</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
    </style>

    <style name="InputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/distance_10dp</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textColor">@color/font_major</item>
    </style>

    <style name="OrderButtonStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/distance_10dp</item>
        <item name="android:textColor">@color/font_major</item>
        <item name="android:textSize">@dimen/font_size_18sp</item>
    </style>

    <style name="CreateOrderTips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_15sp</item>
        <item name="android:textColor">@color/font_minor</item>
    </style>

    <style name="LineColumnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/distance_10dp</item>
        <item name="android:background">@drawable/shape_rectangle</item>
    </style>

</resources>
